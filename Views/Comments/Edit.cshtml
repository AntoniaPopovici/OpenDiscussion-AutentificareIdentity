@model OpenDiscussion_AutentificareIdentity.Models.Comment


@{
    ViewBag.Title = "Edit";
}

<h2>Edit comment</h2>
<br />


@using (Html.BeginForm(controllerName: "Comments", actionName: "Edit",
      method: FormMethod.Post, routeValues: new { id = Model.CommentId }))

{
    @Html.Label("Content", "Continut comentariu")
    <br />

    @Html.Editor("Content", new { @class = "form-control" })
    <br />

    @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
    <br /> <br />

     <button class="btn  btn-primary" type="submit">Commit changes</button>

}

